{{>header}}

    <div class="container-fluid main_header">
      <div class="row">
        <div class="col-md-12 col-12 mx-auto">
     

     <div class="weather-main">
          <div class="main_content">
            <form class="temp_form">
              <input type="text" name="" id="cityName" placeholder="Enter your city name" autocomplete="off">
              <input type="submit" value="search" id="submitBtn">
            </form>
          </div>

          <div class="tempinformation">

            <div class="top_layer">
              <p id="day"></p>
              <p id="today_date">13 OCT</p>
            </div>

            <div class="main_layer">
              <p class="city_name" id="city_name">Get Output Here</p>
              <div class="middle_layer data-hide">
                <p class="temp" id="temp"><span id="temp_real_val">0</span> <sup>o</sup>C</p>
                <div id="temp_status"><i class="fa-solid fa-cloud"></i></div>
              </div>
            </div>


          </div>
         
        </div>

      </div>
    </div>
    </div>



    {{>footer}}

    <script src="js/main.js"></script>